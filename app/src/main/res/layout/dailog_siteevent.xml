<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_eventsitename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorblue2"
        android:padding="15dp"
        android:text="呼和浩特东站"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_record"
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:backgroundTint="@color/colorblue2"
        android:gravity="left"
        android:hint="站点记事"
        android:maxLines="13"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_eventsubmit"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonclickcolor"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_eighteen" />

        <Button
            android:id="@+id/bt_eventcancel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@drawable/buttonclickcolor"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_eighteen" />
    </LinearLayout>

</LinearLayout>