<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="即将到达："/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#48a2fe"
            android:textSize="15sp"
            android:text="兰州站"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="下一站："/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="迎水桥"
            android:layout_marginLeft="3dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#339aff"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_tain_arrive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到达签点"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/buttonclickcolor"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="10dp"
            android:hint="sdfafeadfaefa" />
        <TextView
            android:id="@+id/tv_tain_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发车/通车签点"
            android:layout_margin="10dp"
            android:background="@drawable/buttonclickcolor"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="10dp"
            android:hint="sdfafeadfaefa" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看签点"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/buttonclickcolor"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="10dp"
            android:hint="sdfafeadfaefa" />
        <TextView
            android:id="@+id/tv_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更换车次"
            android:layout_margin="10dp"
            android:background="@drawable/buttonclickcolor"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="10dp"
            android:hint="发车/通车签点" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="兰州站的："
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="列车编组"
            android:layout_margin="3dp"
            android:background="@drawable/buttonclickcolor_mao"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="center"
            android:padding="10dp"
            android:hint="发车通车签" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="站段明细"
            android:layout_margin="3dp"
            android:background="@drawable/buttonclickcolor_mao"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="center"
            android:padding="10dp"
            android:hint="发车通车签" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记事"
            android:layout_margin="3dp"
            android:background="@drawable/buttonclickcolor_mao"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="center"
            android:padding="10dp"
            android:hint="发车通车签" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="操作提示卡"
            android:layout_margin="3dp"
            android:background="@drawable/buttonclickcolor_mao"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="center"
            android:padding="10dp"
            android:hint="发车通车签" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="战场示意图"
            android:layout_margin="3dp"
            android:background="@drawable/buttonclickcolor_mao"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="center"
            android:padding="10dp"
            android:hint="发车通车签" />
    </LinearLayout>
</LinearLayout>
