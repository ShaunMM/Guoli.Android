<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hd_function">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorwhite"
            android:gravity="center"
            android:text="出勤信息"
            android:textSize="@dimen/ts_twenty_four"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/search_result_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_carend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/i6_1"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingLeft="25dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:text="行车结束"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_twenty"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fafafa"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/tv_nextarrive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="即将到达："
                    android:textColor="@color/black"
                    android:textSize="@dimen/ts_eighteen" />

                <TextView
                    android:id="@+id/tv_thestation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.8"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="兰州站"
                    android:textColor="#48a2fe"
                    android:textSize="@dimen/ts_eighteen" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下一站："
                    android:textColor="@color/black"
                    android:textSize="@dimen/ts_eighteen" />

                <TextView
                    android:id="@+id/tv_nextstation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="迎水桥"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ts_eighteen" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#339aff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tain_arrive"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttonclickcolor"
                    android:gravity="center"
                    android:hint="sdfafeadfaefa"
                    android:text="到达签点"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ts_twenty"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_tain_go"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/buttonclickcolor"
                    android:gravity="center"
                    android:hint="sdfafeadfaefa"
                    android:padding="10dp"
                    android:text="发车/通过签点"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ts_twenty"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_see"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttonclickcolor"
                    android:gravity="center"
                    android:hint="sdfafeadfaefa"
                    android:padding="10dp"
                    android:text="揭示命令"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/buttonclickcolor"
                    android:gravity="center"
                    android:hint="发车/通车签点"
                    android:padding="10dp"
                    android:text="更换车次"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_stationInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="兰州站的："
                android:textColor="#48a2fe"
                android:textSize="@dimen/ts_eighteen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cargrap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/buttonclickcolor_mao"
                    android:gravity="center"
                    android:hint="发车通车签"
                    android:padding="10dp"
                    android:text="编组/试风"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ts_sixteen"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_stationAllInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/buttonclickcolor_mao"
                    android:gravity="center"
                    android:hint="发车通车签"
                    android:padding="10dp"
                    android:text="站段明细"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ts_sixteen"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_node"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/buttonclickcolor_mao"
                    android:gravity="center"
                    android:hint="发车通车签"
                    android:padding="10dp"
                    android:text="行车记事"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ts_sixteen"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/buttonclickcolor_mao"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="操作提示卡"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/buttonclickcolor_mao"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="站场示意图"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_photograph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/buttonclickcolor_mao"
                    android:gravity="center"
                    android:hint="发车通车签"
                    android:padding="10dp"
                    android:text="行车拍照"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ts_sixteen"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/buttonclickcolor_mao"
                    android:gravity="center"
                    android:hint="发车通车签"
                    android:padding="10dp"
                    android:text="行车录像"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ts_sixteen"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_aideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/buttonclickcolor_mao"
                    android:gravity="center"
                    android:hint="发车通车签"
                    android:padding="10dp"
                    android:text="行车录音"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ts_sixteen"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!--<include
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            layout="@layout/layout_opertion_left"></include>-->
        <View
            android:layout_width="1dp"
            android:layout_height="250dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/llblack" />
        <!--<include
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            layout="@layout/layout_opertion_right"></include>-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="列车时刻"
                android:textColor="@color/black"
                android:textSize="@dimen/ts_eighteen" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#339aff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f0f0f0"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="建议车速"
                    android:padding="5dp"
                    android:text="车站"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="建议车速"
                    android:padding="5dp"
                    android:text="到"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="建议车速"
                    android:padding="5dp"
                    android:text="发"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="建议车速"
                    android:padding="5dp"
                    android:text="建议车速"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/lv_tainmoment"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/tv_moretime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/buttonclickcolor"
                android:gravity="center"
                android:hint="sdfafeadfaefa"
                android:padding="5dp"
                android:text="更多时刻"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_eighteen"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_signpointinfor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="运行及编组信息"
            android:textColor="@color/black"
            android:textSize="@dimen/ts_eighteen" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#f0f0f0"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="站名"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="到"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="发"
                android:textColor="@color/black"
                android:textSize="15sp" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:padding="10dp"
                android:text="记事"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:padding="10dp"
                android:text="辆数"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:padding="10dp"
                android:text="吨数"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:padding="10dp"
                android:text="计长"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:padding="10dp"
                android:text="减压"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:padding="10dp"
                android:text="排"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:padding="10dp"
                android:text="充"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:padding="10dp"
                android:text="漏"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_signpointinfor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:divider="@null"
            android:scrollbars="none" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_comment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="揭示命令（点击查看全部）"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#f0f0f0"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="5dp"
                android:text="调整命令号"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="5dp"
                android:text="区间"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="方向"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:padding="5dp"
                android:text="限速地点"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="5dp"
                android:text="起止时间"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="center"
                android:padding="5dp"
                android:text="限速值(Km/h)"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:gravity="center"
                android:padding="5dp"
                android:text="状态"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_AnnounceCommands"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:divider="@null"
            android:scrollbars="none" />

    </LinearLayout>

</LinearLayout>
