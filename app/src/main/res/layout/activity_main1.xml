<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/course_title2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hd_function"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorwhite"
        android:gravity="center"
        android:text="培 训 考 试"
        android:textSize="@dimen/ts_twenty_four"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@color/colorblue" />

        <TextView
            android:id="@+id/tokedata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="在线考试"
            android:textSize="@dimen/ts_twenty"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorblue" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@color/colorwhite" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorblue2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="考试内容"
            android:textSize="@dimen/ts_twenty" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="截止日期"
            android:textSize="@dimen/ts_twenty" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="最高分数"
            android:textSize="@dimen/ts_twenty" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="通过分数"
            android:textSize="@dimen/ts_twenty" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="考试次数"
            android:textSize="@dimen/ts_twenty" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="状态"
            android:textSize="@dimen/ts_twenty" />

    </LinearLayout>

    <ListView
        android:id="@+id/vocational_list"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp">

        <Button
            android:id="@+id/test_simulat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@drawable/buttonclickcolor"
            android:gravity="center"
            android:padding="8dp"
            android:text="岗前答题"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_twenty_two"
            android:textStyle="bold" />

        <Button
            android:id="@+id/test_simulat6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/test_simulat"
            android:layout_weight="1"
            android:background="@drawable/buttonclickcolor"
            android:gravity="center"
            android:padding="8dp"
            android:text="模拟练习"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_twenty_two"
            android:textStyle="bold" />

        <Button
            android:id="@+id/test_simulat2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@+id/test_simulat6"
            android:layout_weight="1"
            android:background="@drawable/buttonclickcolor"
            android:gravity="center"
            android:padding="8dp"
            android:text="我的错题"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_twenty_two"
            android:textStyle="bold" />
    </LinearLayout>

