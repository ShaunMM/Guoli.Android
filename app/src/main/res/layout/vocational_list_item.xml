<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/volist_item1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/ts_sixteen"
            android:gravity="center"
            android:text="考试内容" />

        <TextView
            android:id="@+id/volist_item2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/ts_sixteen"
            android:text="截止日期" />

        <TextView
            android:id="@+id/volist_item3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/ts_sixteen"
            android:gravity="center"
            android:text="最高分数" />

        <TextView
            android:id="@+id/volist_item4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/ts_sixteen"
            android:text="通过分数" />

        <TextView
            android:id="@+id/volist_item5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/ts_sixteen"
            android:gravity="center"
            android:text="考试次数" />


        <TextView
            android:id="@+id/volist_item6"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/buttonclickcolor"
            android:gravity="center"
            android:textSize="@dimen/ts_sixteen"
            android:padding="3dp"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>