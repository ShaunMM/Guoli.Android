<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/systemtools_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/system_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/system_tools1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@mipmap/i25_1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dWSystemToolstv_paddingLeft"
                android:text="日历"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_twenty_two" />

            <TextView
                android:id="@+id/system_tools2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@mipmap/i25_2"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dWSystemToolstv_paddingLeft"
                android:text="计算器"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_twenty_two" />

            <TextView
                android:id="@+id/system_tools3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@mipmap/i25_3"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dWSystemToolstv_paddingLeft"
                android:text="记事本"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_twenty_two" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/system_tools4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@mipmap/i25_4"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dWSystemToolstv_paddingLeft"
                android:text="拍照"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_twenty_two" />

            <TextView
                android:id="@+id/system_tools5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@mipmap/i25_5"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dWSystemToolstv_paddingLeft"
                android:text="录音"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_twenty_two" />

            <TextView
                android:id="@+id/system_tools6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@mipmap/i25_6"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dWSystemToolstv_paddingLeft"
                android:text="录像"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_twenty_two" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_twenty_two">

            <TextView
                android:id="@+id/system_tools7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@mipmap/i25_7"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dWSystemToolstv_paddingLeft"
                android:text="通知公告"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_twenty_two" />

            <TextView
                android:id="@+id/system_tools8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@mipmap/i25_8"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dWSystemToolstv_paddingLeft"
                android:text="音视照片"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_twenty_two" />

            <TextView
                android:id="@+id/system_tools9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@mipmap/i25_9"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dWSystemToolstv_paddingLeft"
                android:text="退出系统"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_twenty_two" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_twenty_two">

            <TextView
                android:id="@+id/system_tools10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@mipmap/i25_7"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dWSystemToolstv_paddingLeft"
                android:text="系统升级"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_twenty_two" />

            <TextView
                android:id="@+id/system_tools11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@mipmap/i25_8"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dWSystemToolstv_paddingLeft"
                android:text="音视照片"
                android:textColor="@color/white"
                android:visibility="invisible"
                android:textSize="@dimen/ts_twenty_two" />

            <TextView
                android:id="@+id/system_tools12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@mipmap/i25_9"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dWSystemToolstv_paddingLeft"
                android:text="退出系统"
                android:textColor="@color/white"
                android:visibility="invisible"
                android:textSize="@dimen/ts_twenty_two" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/system_fragments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</RelativeLayout>