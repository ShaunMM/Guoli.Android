<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorblue2"
        android:padding="15dp"
        android:text="意见反馈"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/feedback_ed"
        android:layout_width="700dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:backgroundTint="@color/colorblue2"
        android:gravity="left"
        android:hint="请输入您宝贵的意见"
        android:maxLines="5"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/feedback_ok"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/buttonclickcolor"
            android:text="提交"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/feedback_back"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/buttonclickcolor"
            android:text="返回"
            android:textColor="@color/white"

            />
    </LinearLayout>

</LinearLayout>