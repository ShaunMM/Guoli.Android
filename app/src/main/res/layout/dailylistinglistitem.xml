<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/daily_Listing_itemmessage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="1"
        android:textSize="@dimen/ts_eighteen" />

    <TextView
        android:id="@+id/daily_Listing_itemtype"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="2"
        android:textSize="@dimen/ts_eighteen" />

    <TextView
        android:id="@+id/daily_Listing_itemnumber"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="3"
        android:textSize="@dimen/ts_eighteen" />

    <TextView
        android:id="@+id/daily_Listing_itemtime"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="4"
        android:textSize="@dimen/ts_eighteen" />

    <TextView
        android:id="@+id/daily_Listing_itemdo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/buttonclickcolor"
        android:gravity="center"
        android:padding="5dp"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_eighteen" />
</LinearLayout>