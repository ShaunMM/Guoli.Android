<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/detailslayoutpadingtop">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="日期："
                android:textSize="@dimen/detailstextsize"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/selectdetails_takedate"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/detailstextsize" />
            </LinearLayout>

            <TextView
                android:id="@+id/checi"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="抽查地点："
                android:textSize="@dimen/detailstextsize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/selectdetails_address"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/detailstextsize" />


            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="抽查类型："
                android:textSize="@dimen/detailstextsize"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/selectdetails_LocomotiveType"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="@dimen/detailstextsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="1dp"
                android:layout_marginLeft="120dp"
                android:background="@color/sblack" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="1dp"
                android:layout_marginLeft="120dp"
                android:background="@color/sblack" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="1dp"
                android:layout_marginLeft="120dp"
                android:background="@color/sblack" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/detailslayoutpadingtop">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="抽查时间："
                android:textSize="@dimen/detailstextsize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/selectdetails_time1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/detailstextsize" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="到"
                android:textColor="@color/colorblue"
                android:textSize="@dimen/detailstextsize" />

            <TextView
                android:id="@+id/selectdetails_time2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/detailstextsize" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="发现问题个数："
                android:textSize="@dimen/detailstextsize"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/selectdetails_promcount"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:inputType="number"
                android:textSize="@dimen/detailstextsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_marginLeft="120dp"
                android:background="@color/sblack" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="@color/sblack" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="1dp"
                android:layout_marginLeft="180dp"
                android:background="@color/sblack" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/detailslayoutpadingtop">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="抽查内容："
                android:textSize="@dimen/detailstextsize"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/daily_selectdetails_aim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:maxLines="4"
                android:textSize="@dimen/detailstextsize" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="30dp"
            android:background="@color/sblack" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/detailslayoutpadingtop">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="发现问题："
                android:textSize="@dimen/detailstextsize"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/daily_selectdetails_problem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:maxLines="4"
                android:textSize="@dimen/detailstextsize" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="30dp"
            android:background="@color/sblack" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/detailslayoutpadingtop">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="处理意见："
                android:textSize="@dimen/detailstextsize"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/daily_selectdetails_dopinion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:maxLines="4"
                android:textSize="@dimen/detailstextsize" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="30dp"
            android:background="@color/sblack" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/daily_selectdetails_save"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:background="@drawable/buttonclickcolor"
                android:gravity="center"
                android:text="保存到本地"
                android:textColor="@color/white"
                android:textSize="@dimen/detailstextsize" />

            <Button
                android:id="@+id/daily_selectdetails_saveup"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:background="@drawable/buttonclickcolor"
                android:gravity="center"
                android:text="保存并上传"
                android:textColor="@color/white"
                android:textSize="@dimen/detailstextsize"
                android:visibility="invisible" />

            <Button
                android:id="@+id/daily_selectdetails_cancle"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:background="@drawable/buttonclickcolor"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/detailstextsize" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>